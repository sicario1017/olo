package jUnit2023;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class additionTest {

	@Test
	void test() {
		addition a=new addition();
		int x=a.add(20,10);
		assertEquals(30,x);
	}

}





